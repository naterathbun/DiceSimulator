<Window x:Name="CharacterWindow" x:Class="DiceSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceSimulator"
        mc:Ignorable="d"
        Title="DnD Character Sheet" Height="650" Width="650" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="102" Margin="12,10,0,0" VerticalAlignment="Top" Width="609">
            <Label x:Name="CharacterName" Content="Character Name" HorizontalAlignment="Left" Height="28" Margin="11.667,8.667,0,0" VerticalAlignment="Top" Width="139"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,136,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="StrengthValue" Content="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="73" Margin="413,136,0,0" VerticalAlignment="Top" Width="208"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="370" Margin="413,229,0,0" VerticalAlignment="Top" Width="208"/>
        <Label x:Name="CharacterClass" Content="Class" HorizontalAlignment="Left" Height="28" Margin="26,46,0,0" VerticalAlignment="Top" Width="139"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="463" Margin="197,136,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="DexterityLabel" Content="Dexterity" Margin="15,197,544.667,395" Width="85" Height="30"/>
        <Label x:Name="ConstitutionLabel" Content="Constitution" Margin="15,280,544.667,312" Width="85" Height="30"/>
        <Label x:Name="IntelligenceLabel" Content="Intelligence" Margin="15,364,544.667,228" Width="85" Height="30"/>
        <Label x:Name="WisdomLabel" Content="Wisdom" Margin="15,447,544.667,145" Width="85" Height="30"/>
        <Label x:Name="CharismaLabel" Content="Charisma" Margin="15,531,544.667,61" Width="85" Height="30"/>
        <Label x:Name="StrengthLabel" Content="Strength" Margin="12,112,547.667,480" Width="85" Height="30"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,220,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="DexterityValue" Content="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,303,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="ConstitutionValue" Content="7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,387,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="IntelligenceValue" Content="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,470,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="WisdomValue" Content="7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="12,554,0,0" VerticalAlignment="Top" Width="112">
            <Label x:Name="CharismaValue" Content="7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,136,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="StrengthBonus" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,220,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="label" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,303,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="label1" Content="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,387,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="label2" Content="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,470,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="label3" Content="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="138,554,0,0" VerticalAlignment="Top" Width="45">
            <Label x:Name="label4" Content="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
